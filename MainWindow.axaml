<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Vec3.MainWindow"
        Title="Vec3"
        Width="1200" Height="800">

    <Grid Margin="20" Background="{DynamicResource LightGrey}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Vec3" Classes="h1" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Name="SwitchModeButton" Content="Switch to REPL Mode" Margin="0,0,10,0"/>
            <Button Name="EvaluateButton" Content="Evaluate" Width="100"/>
        </StackPanel>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="LineNumbers" 
                       FontFamily="Consolas" FontSize="14" 
                       Margin="0,7,10,0" Padding="5,0,5,0"
                       TextAlignment="Right" VerticalAlignment="Top"
                       Foreground="{DynamicResource LightBlue}"/>
            <TextBox Grid.Column="1" Name="InputBox" 
                     FontFamily="Consolas" FontSize="14"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalAlignment="Stretch" 
                     Padding="5,7,5,7"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </Grid>
        
        <TextBlock Grid.Row="3" Text="Output" Classes="h2" Margin="0,20,0,10"/>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Execution Output -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Execution Output" Classes="h3"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Background="{DynamicResource LightGrey}" BorderBrush="{DynamicResource LightBlue}" BorderThickness="1">
                    <TextBlock Name="OutputBlock" TextWrapping="Wrap" Margin="5" Foreground="{DynamicResource Black}"/>
                </ScrollViewer>
            </StackPanel>
            
            <!-- Bytecode -->
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock Text="Bytecode" Classes="h3"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Background="{DynamicResource LightGrey}" BorderBrush="{DynamicResource LightBlue}" BorderThickness="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="Constant Pool" Classes="h3"/>
                        <TextBlock Name="ConstantPoolBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource Black}"/>
                        <TextBlock Text="Disassembled Chunk" Classes="h3"/>
                        <TextBlock Name="DisassembledChunkBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource Black}"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
            
            <!-- VM Output -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="VM Output" Classes="h3"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300" Background="{DynamicResource LightGrey}" BorderBrush="{DynamicResource LightBlue}" BorderThickness="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="VM Instructions" Classes="h3"/>
                        <TextBlock Name="VMInstructionsBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource Black}"/>
                        <TextBlock Text="VM Stack" Classes="h3"/>
                        <TextBlock Name="VMStackBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource Black}"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>