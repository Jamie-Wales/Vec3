<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Vec3.MainWindow"
        Title="Vec3">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="LineNumbers" 
                       FontFamily="Consolas" FontSize="14" 
                       Margin="0,5,10,0" Padding="5,5,5,5"
                       TextAlignment="Right" VerticalAlignment="Top"/>
            <TextBox Grid.Column="1" Name="InputBox" 
                     FontFamily="Consolas" FontSize="14"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalAlignment="Stretch" Margin="0,5,0,0"
                     Padding="5,5,5,5"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </Grid>
        <Button Grid.Row="1" Name="EvaluateButton" Content="Evaluate" Width="100" Height="30" Margin="0,10,0,10" HorizontalAlignment="Left" />
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="OutputBlock" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>